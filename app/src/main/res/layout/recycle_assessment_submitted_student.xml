<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSubject"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/al_title"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:textColor="@color/grey_80"
                    android:fontFamily="@font/quicksand_bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <TextView
                android:gravity="start"
                android:padding="5dp"
                android:id="@+id/al_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:background="@drawable/ic_corner_view_two"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.60">
                <TextView
                    android:id="@+id/al_createdon"
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:textColor="@color/grey_80"
                    android:drawableStart="@drawable/ic_date_range_black_24dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40">
                <TextView
                    android:id="@+id/al_assessment_type"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:textColor="@color/grey_80"
                    android:drawableStart="@drawable/ic_assessment_type"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rlViewHomework"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45">
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnViewHomework"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:background="@drawable/ic_btn_view_three"
                        android:textSize="14sp"
                        android:text="@string/view_homework"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45">
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnViewAssessment"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingStart="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_btn_view_three"
                        android:textSize="14sp"
                        android:text="@string/view_submission"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.12">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btnDownloadAss"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:padding="6dp"
                        android:background="@drawable/ic_circle_design"
                        android:tint="@color/white"
                        android:src="@drawable/ic_file_download"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>