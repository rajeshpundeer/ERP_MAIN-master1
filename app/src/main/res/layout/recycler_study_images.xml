<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fivedp"
    android:layout_marginEnd="@dimen/fivedp"
    android:layout_marginStart="@dimen/fivedp"
    android:background="@color/grey_80"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp">

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/download_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_4" />
            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/fivedp"
                android:layout_margin="@dimen/fivedp"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/red_600"
                />
        </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
             <ImageButton
                 android:id="@+id/ass_download"
                 android:layout_gravity="center_vertical"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginEnd="10dp"
                 android:backgroundTint="@color/grey_80"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:srcCompat="@drawable/ic_file_download"
                 android:tint="@color/grey_80"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:textColor="@color/black"
                   android:text="@string/download_image"/>
           </LinearLayout>
         <TextView
             android:id="@+id/ass_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:maxLines="1"
             android:layout_marginStart="10dp"
             android:textAppearance="@style/TextAppearance.AppCompat.Title"
             android:textColor="@color/Grey_dark" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/ass_deription"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_80"
                android:visibility="visible" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>