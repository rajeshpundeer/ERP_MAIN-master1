<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortydp"
                android:text="@string/Your_Ans_Sheet_Preview"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/black"
                android:background="@drawable/ic_corner_view_two"
                android:textSize="18sp"
                android:padding="@dimen/fivedp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="serif"/>


    <LinearLayout
        android:id="@+id/ll_selectspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fortydp"
            android:layout_weight=".5"
            android:text="Submit this Ans. Sheet and Finish Test"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:typeface="serif"/>
        <LinearLayout
            android:id="@+id/ansViewlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_marginTop="@dimen/fivedp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/White"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortydp"
                android:weightSum="2"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fortydp"
                    android:layout_weight=".5"
                    android:text="@string/q_no"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_btn_view_three"
                    android:textSize="20sp"
                    android:padding="@dimen/fivedp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:layout_weight=".02"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="@dimen/fortydp"
                    android:text="@string/ans"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_btn_view_three"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="@dimen/fivedp"
                    android:textStyle="bold"
                    android:typeface="serif"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02"
                    android:background="@color/White"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLine2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@color/gray"/>
        <androidx.recyclerview.widget.RecyclerView
            android:minHeight="80dp"
            android:id="@+id/rvViewAns"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbarSize="7dp"
            android:scrollIndicators="start"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/grey_80"
            android:scrollbars="vertical" />
        <View
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fivedp"
            android:textColor="@color/blue_900"
            android:text="ok" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_900"
            android:layout_marginTop="@dimen/fivedp"
            android:layout_marginLeft="@dimen/thirydp"
            android:text="@string/cancel"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
