<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/twodp"
    android:layout_marginTop="@dimen/twodp"
    android:layout_marginEnd="@dimen/twodp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/tendp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_corner_view_two"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_bold"
                android:padding="@dimen/fifteendp"
                android:textColor="@color/black"
                android:layout_weight="3.65"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight=".35"
                android:layout_margin="@dimen/fivedp"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/blue_900" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>