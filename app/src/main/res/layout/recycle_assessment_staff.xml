<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvClassName"
                    android:elevation="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/al_title"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="5dp"
                        android:layout_width="0dp"
                        android:layout_weight=".80"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textSize="22sp"
                        android:textColor="@color/grey_80"
                        android:fontFamily="@font/quicksand_bold"
                        tools:ignore="RtlSymmetry" />
                    <ImageView
                        android:id="@+id/tvDeleteHomework"
                        android:layout_width="0dp"
                        android:layout_weight=".10"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/twodp"
                        android:backgroundTint="@color/grey_80"
                        android:background="@drawable/ic_delete"/>
                    <ImageView
                        android:id="@+id/tvViewHomeWork"
                        android:layout_width="0dp"
                        android:layout_weight=".10"
                        android:layout_height="40dp"
                        android:src="@drawable/homework"/>
                </LinearLayout>

                <TextView
                    android:gravity="start"
                    android:padding="5dp"
                    android:id="@+id/al_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:background="@drawable/ic_corner_view_two"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/Grey_dark"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.54">
                    <TextView
                        android:id="@+id/al_createdon"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textSize="16sp"
                        android:textColor="@color/grey_80"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24">
                    <TextView
                        android:id="@+id/al_assessment_type"
                        android:elevation="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textSize="16sp"
                        android:textColor="@color/grey_80"
                        android:drawableStart="@drawable/ic_assessment_type"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_set_ans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:text="@string/set_ans"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="@dimen/twodp"
                    android:background="@drawable/ic_btn_view_one"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_timer"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/tendp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/time_over"
                android:background="@drawable/ic_btn_view_one"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/lltimeshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/tendp"
                android:background="@drawable/ic_corner_view_two"
                android:layout_marginTop="@dimen/twodp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvStartTime"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Start Time"
                    android:textColor="@color/grey_80"
                    android:fontFamily="@font/quicksand_bold"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/grey_80"/>
                <TextView
                    android:id="@+id/tvEndTime"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="End Time"
                    android:textColor="@color/grey_80"
                    android:fontFamily="@font/quicksand_bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/tvPending"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="10dp"
                            android:background="@drawable/ic_btn_view_three"
                            android:text="@string/pending"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvPendingNum"
                            android:layout_gravity="end"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="0"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/ic_circle_design"
                            android:backgroundTint="@color/red_800"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/tvSubmitted"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="10dp"
                            android:background="@drawable/ic_btn_view_three"
                            android:text="@string/submitted"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvSubmittedNum"
                            android:layout_gravity="end"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="0"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/ic_circle_design"
                            android:backgroundTint="@color/orange_600"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/tvChecked"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="10dp"
                            android:background="@drawable/ic_btn_view_three"
                            android:text="@string/checked"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvCheckedNum"
                            android:layout_gravity="end"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="0"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/ic_circle_design"
                            android:backgroundTint="@color/green_600"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/q_type_banner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_mcq_banner"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>