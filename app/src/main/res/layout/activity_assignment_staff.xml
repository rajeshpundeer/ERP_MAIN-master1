<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AssignmentStaff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="40dp"
            android:text="@string/homework"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/select_class"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_11">

                <Spinner
                    android:id="@+id/spCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/select_subject"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_11">

                <Spinner
                    android:id="@+id/spSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/title1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/title_sa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_7"
                android:hint="@string/type_title_here"
                android:padding="5dp"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/assessment"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="serif"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/chkAssessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_7"
                android:hint="@string/tick_if_assessment_required"
                android:padding="5dp"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llAssessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya_sans"
                    android:text="@string/select_assessment_type"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/background_11">

                    <org.angmarch.views.NiceSpinner
                        android:id="@+id/spRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMaximum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvMaximum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="number"
                        android:text="@string/maximum_marks"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/edMaximum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/background_7"
                        android:hint="@string/type_maximum"
                        android:padding="5dp"
                        android:textColor="@color/Grey_dark"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/alegreya_sans"
                android:maxLines="2"
                android:text="@string/description1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/description_sa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_7"
                android:gravity="start"
                android:hint="@string/type_description_here"
                android:maxLines="5"
                android:minLines="3"
                android:padding="5dp"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp" />
            <CheckBox
                android:id="@+id/chkPages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_7"
                android:hint="@string/multiple_pages_required"
                android:padding="5dp"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/upload_pdf_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_8"
                android:gravity="center"
                android:text="@string/upload_pdf"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:typeface="serif" />

                <TextView
                    android:id="@+id/upload_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_8"
                    android:gravity="center"
                    android:text="@string/upload_image"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <RelativeLayout
                    android:id="@+id/rl_Images"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_corner_view_one"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_no_available"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/lato_black"
                        android:gravity="center"
                        android:text="@string/tap_icon_to_add_images"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/img_click_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity=""
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:elevation="0dp"
                        app:fabSize="mini"
                        app:rippleColor="@android:color/white"
                        app:srcCompat="@drawable/ic_add_black_24dp" />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_weight="7"
                    android:gravity="start"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/date_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/button_shape4"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/select_date"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical">

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/background_4"
                        android:src="@drawable/ic_arrow_forward_white_24dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/Grey_dark" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>