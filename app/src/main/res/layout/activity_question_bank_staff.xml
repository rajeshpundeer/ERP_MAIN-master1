<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.school.iqdigit.Activity.Assessment1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="40dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/question_bank"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/select_class"
                android:textSize="18sp"
                android:typeface="serif"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_11"
                android:layout_margin="16dp">
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_subject"
                android:textSize="18sp"
                android:typeface="serif"
                android:fontFamily="@font/alegreya_sans"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_11"
                android:layout_margin="16dp">
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/question"
                android:textColor="@color/grey_80"
                android:textSize="18sp"
                android:typeface="serif" />

            <ImageView
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_corner_view_one"
                android:src="@drawable/image_gallery"
                android:tint="@color/colorPrimaryDark"
                android:id="@+id/img_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="center" />
            <EditText
                android:gravity="top"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:id="@+id/edQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:minLines="3"
                android:background="@drawable/ic_corner_view_one"
                android:hint="@string/type_ouestion_here"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/Grey_dark"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/Grey_dark"
                android:text="@string/or"/>
            <RelativeLayout
                android:background="@drawable/ic_corner_view_one"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_no_available"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tap_icon_to_add_Question_images"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_question"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".88"
                    android:text="@string/tap_icon_to_add_Question_images"
                    android:textSize="16sp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/twodp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/img_click_pic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/white"
                    app:srcCompat="@drawable/ic_add_black_24dp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/options"
                android:textColor="@color/grey_80"
                android:textSize="16sp"
                android:typeface="serif" />
            <androidx.cardview.widget.CardView
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/ic_corner_view_one">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tendp"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Grey_dark"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/fivedp"
                        android:layout_weight=".05"
                        android:layout_gravity="center"
                        android:text="@string/one"/>
                    <EditText
                        android:gravity="top"
                        android:padding="@dimen/fivedp"
                        android:id="@+id/edOption1"
                        android:layout_width="0dp"
                        android:layout_weight=".95"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fivedp"
                        android:minLines="1"
                        android:background="@drawable/ic_corner_view_one"
                        android:hint="@string/type_first_option_here"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/Grey_dark"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Grey_dark"
                        android:textSize="18sp"
                        android:layout_weight=".05"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/fivedp"
                        android:text="@string/two"/>
                    <EditText
                        android:gravity="top"
                        android:padding="@dimen/fivedp"
                        android:id="@+id/edOption2"
                        android:layout_width="0dp"
                        android:layout_weight=".95"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fivedp"
                        android:minLines="1"
                        android:background="@drawable/ic_corner_view_one"
                        android:hint="@string/type_second_option_here"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/Grey_dark"
                        android:textSize="18sp" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Grey_dark"
                            android:textSize="18sp"
                            android:layout_weight=".05"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/fivedp"
                            android:text="@string/three"/>
                        <EditText
                            android:gravity="top"
                           android:padding="@dimen/fivedp"
                            android:id="@+id/edOption3"
                            android:layout_width="0dp"
                            android:layout_weight=".95"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/fivedp"
                            android:minLines="1"
                            android:background="@drawable/ic_corner_view_one"
                            android:hint="@string/type_third_option_here"                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/Grey_dark"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Grey_dark"
                            android:textSize="18sp"
                            android:layout_weight=".05"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/fivedp"
                            android:text="@string/four"/>
                        <EditText
                            android:gravity="top"
                            android:padding="@dimen/fivedp"
                            android:id="@+id/edOption4"
                            android:layout_width="0dp"
                            android:layout_weight=".95"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/fivedp"
                            android:minLines="1"
                            android:background="@drawable/ic_corner_view_one"
                            android:hint="@string/type_forth_option_here"                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/Grey_dark"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/difficulty_level"
                android:textColor="@color/grey_80"
                android:textSize="16sp"
                android:typeface="serif" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_corner_view_one"
                android:layout_margin="16dp">
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spDifficultyLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixteendp"
                android:elevation="5dp"
                android:clickable="true"
                android:background="@drawable/ic_btn_view_one"
                android:padding="@dimen/fivedp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>