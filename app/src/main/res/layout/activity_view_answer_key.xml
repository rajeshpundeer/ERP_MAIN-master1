<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llanskey"
    tools:context="com.school.iqdigit.Activity.ViewAnswerKey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="40dp"
            android:text="@string/view_ans_key"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selectspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ansViewlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llLine1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:orientation="horizontal" />
            <LinearLayout
                android:id="@+id/llLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tendp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/red_500"
                        app:elevation="0dp"
                        app:fabSize="mini"
                        app:rippleColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/Incorrect"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/green_500"
                        app:elevation="0dp"
                        app:fabSize="mini"
                        app:rippleColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/correct"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/fivedp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/White"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortydp"
                android:weightSum="3.08"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fortydp"
                    android:layout_weight=".5"
                    android:text="@string/q_no"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_btn_view_three"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:layout_weight=".02"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="@dimen/fortydp"
                    android:text="@string/submitted_ans"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_btn_view_three"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="@dimen/fivedp"
                    android:textStyle="bold"
                    android:typeface="serif"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:layout_weight=".02"/>
                <TextView
                    android:id="@+id/tvAns"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="@dimen/fortydp"
                    android:text="@string/Answer"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_btn_view_three"
                    android:textSize="20sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="@dimen/fivedp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="serif"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02"
                    android:background="@color/White"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLine2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@color/gray"/>
        <androidx.recyclerview.widget.RecyclerView
            android:minHeight="150dp"
            android:id="@+id/rvViewAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/noAnsKeyavailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="101dp"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:src="@drawable/activity_img" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/acti_title"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alegreya_bold"
            android:text="@string/no_ans_key_available"
            android:textColor="@color/Blacklight"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
