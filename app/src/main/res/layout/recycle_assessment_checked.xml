<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_corner_view_one"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/StudentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textSize="20sp"
                android:textColor="@color/grey_80"
                android:typeface="serif"
                android:fontFamily="@font/quicksand_bold"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.68"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatButton
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:clickable="false"
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/ic_corner_view_three"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="18sp"
                        android:textColor="@color/grey_80"/>
                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:layout_gravity="center_horizontal"
                        android:clickable="false"
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:visibility="gone"
                        android:theme="@style/RatingBar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnViewAssessment"
                        android:layout_marginLeft="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:theme="@style/Button.Primary"
                        android:text="@string/view"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btnDownloadAss"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_circle_design"
                        android:tint="@color/white"
                        android:src="@drawable/ic_file_download"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:theme="@style/Button.Primary"
                        android:text="@string/recheck"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>